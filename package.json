{
  "name": "@smarlhens/opinionated-safe-code-normalizer",
  "version": "1.0.2",
  "description": "TypeScript opinionated safe code normalizer using ts-morph & ESLint",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "precommit": "lint-staged && npm run build",
    "prepare": "husky install",
    "prettier:check": "prettier --check ./**/*.ts",
    "prettier:write": "prettier --write ./**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "semantic-release": "semantic-release"
  },
  "bin": {
    "oscn": "dist/index.js"
  },
  "keywords": [
    "normalizer",
    "autofixer",
    "typescript",
    "eslint",
    "ts-morph"
  ],
  "author": "Samuel MARLHENS <samuel.marlhens@gmail.com> (https://smarlhens.github.io)",
  "license": "Apache-2.0",
  "dependencies": {
    "eslint": "7.30.0",
    "ts-morph": "11.0.2",
    "ts-node": "10.1.0",
    "tslib": "2.3.0",
    "yargs": "17.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/eslint": "7.2.14",
    "@types/node": "16.0.0",
    "@types/yargs": "17.0.2",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.1",
    "lint-staged": "11.0.0",
    "prettier": "2.3.2",
    "semantic-release": "17.4.4",
    "typescript": "4.3.5"
  },
  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/smarlhens/opinionated-safe-code-normalizer.git"
  },
  "bugs": {
    "url": "https://github.com/smarlhens/opinionated-safe-code-normalizer/issues"
  },
  "homepage": "https://github.com/smarlhens/opinionated-safe-code-normalizer#readme",
  "engines": {
    "node": ">10.18"
  }
}

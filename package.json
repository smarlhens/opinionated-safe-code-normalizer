{
  "name": "@smarlhens/opinionated-safe-code-normalizer",
  "version": "1.0.15",
  "description": "TypeScript opinionated safe code normalizer using ts-morph & ESLint",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "precommit": "lint-staged && npm run build",
    "prepare": "husky install",
    "prettier:check": "prettier --check ./**/*.ts",
    "prettier:write": "prettier --write ./**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "semantic-release": "semantic-release"
  },
  "bin": {
    "oscn": "dist/index.js"
  },
  "keywords": [
    "normalizer",
    "autofixer",
    "typescript",
    "eslint",
    "ts-morph"
  ],
  "author": "Samuel MARLHENS <samuel.marlhens@gmail.com> (https://smarlhens.github.io)",
  "license": "Apache-2.0",
  "dependencies": {
    "eslint": "7.32.0",
    "ts-morph": "12.0.0",
    "ts-node": "10.3.0",
    "tslib": "2.3.1",
    "yargs": "17.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.1",
    "@types/eslint": "7.28.1",
    "@types/node": "16.0.0",
    "@types/yargs": "17.0.4",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.2",
    "lint-staged": "11.2.3",
    "prettier": "2.4.1",
    "semantic-release": "17.4.7",
    "typescript": "4.4.4"
  },
  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/smarlhens/opinionated-safe-code-normalizer.git"
  },
  "bugs": {
    "url": "https://github.com/smarlhens/opinionated-safe-code-normalizer/issues"
  },
  "homepage": "https://github.com/smarlhens/opinionated-safe-code-normalizer#readme",
  "engines": {
    "node": ">=12"
  }
}
